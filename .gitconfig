[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	root = rev-parse --show-toplevel
	please = push --force-with-lease
[merge]
	tool = meld
[absorb]
        maxStack = 128
[diff]
	colormoved = default
[credential]
	helper = !pass-git-helper $@
